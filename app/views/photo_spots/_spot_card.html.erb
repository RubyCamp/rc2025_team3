          <%# <%= render partial: "shared/rating_stars", locals: { rating: (photo_spot.reviews.average(:rating)&.round || 0) } %> %>
          <%# <span class="text-xs text-gray-500 ml-2">(<%= photo_spot.reviews.count %
        <%# <% else %> 
          <%# <span class="text-xs text-gray-400">未評価</span> %>
        <%# <% end %> 
      <%# </div> %>
    </div>
  </div>
<% end %>
